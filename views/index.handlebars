<h1>Are you hangry?</h1>



<h2>Fear not!! Type the name of the burger you'de like!</h2>
<h2>Add a Buger Here</h2>

<form class="create-update-form" action="burgers/create" method="POST" class="button-size">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <textarea type="text" id="burger" name="burger">
  </div>
  <button type="submit">Add Burger</button>
</form>

<h2>Burger/s waiting to be devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}} 
      <li>
        {{this.id}}. {{this.burger}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Devour it!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

